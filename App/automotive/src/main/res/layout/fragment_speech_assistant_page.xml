<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:contextClickable="false"
    android:orientation="vertical"
    tools:context=".view.SpeechAssistantPage">

    <LinearLayout
        android:id="@+id/fragment_power_button_delay"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="@string/delay"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/delay_spinner_power_management_page"
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:entries="@array/delay_array" />
    </LinearLayout>

    <Button
        android:id="@+id/fragment_speech_announcement_button"
        style="@style/Theme.InfotAiMOS.Button"
        android:backgroundTint="@color/landing_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_speech_announcement" />

    <Button
        android:id="@+id/fragment_ptt_button"
        style="@style/Theme.InfotAiMOS.Button"
        android:backgroundTint="@color/landing_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_ptt" />

    <Button
        android:id="@+id/fragment_ttt_button"
        style="@style/Theme.InfotAiMOS.Button"
        android:backgroundTint="@color/landing_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_ttt" />
</LinearLayout>